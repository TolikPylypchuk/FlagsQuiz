<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="ua.edu.lnu.ami.flagsquiz.activities.QuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/question"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/flag_description"
            app:layout_constraintHorizontal_bias="0.5" />

        <LinearLayout
            android:id="@+id/countries1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/country1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/country2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/country3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/countries2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/country4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/country5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/country6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/countries3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/country7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/country8"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/country9"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>